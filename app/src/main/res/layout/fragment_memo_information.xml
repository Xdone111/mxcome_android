<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/msg_grey_bg">

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_16sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="备注"/>
            <EditText
                android:id="@+id/et_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:hint="添加备注"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/line_bg"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorGrey"
                android:textColor="@color/colorBlue" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_16sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="标签"/>
            <EditText
                android:id="@+id/et_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:hint="添加标签"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/line_bg"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorGrey"
                android:textColor="@color/colorGrey" />
            <com.zss.library.taglayout.TagLayout
                android:id="@+id/service_taglayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_25dp"
                android:paddingRight="@dimen/dimen_25dp"
                android:paddingTop="@dimen/dimen_10dp"
                app:columnSize="3"
                app:lineSpacing="@dimen/dimen_10dp"
                app:tagSpacing="@dimen/dimen_20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_16sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="电话"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:hint="添加电话号码"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/line_bg"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorGrey"
                android:textColor="@color/colorGrey" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_16sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="描述"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:hint="添加更多描述信息（200字内）"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/line_bg"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorGrey"
                android:textColor="@color/colorGrey" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_48dp"
                android:textSize="@dimen/font_16sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="图片"/>
            <EditText
                android:id="@+id/et_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:hint="添加名片或相关图片"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/line_bg"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorGrey"
                android:textColor="@color/colorGrey" />
            <ImageView
                android:id="@+id/iv_3"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dimen_48dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:src="@mipmap/believe_ad"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/line_bg"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/to_next"
        android:layout_below="@id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:gravity="center"
        android:text="完 成"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:textSize="@dimen/font_16sp"
        android:textColor="@color/colorGrey"
        android:background="@drawable/corner_btn_normal_msg"/>
</RelativeLayout>

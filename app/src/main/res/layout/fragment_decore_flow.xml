<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/me_xbg1"
                android:scaleType="matrix">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:src="@mipmap/decore_flow_logo" />

                <TextView
                    android:id="@+id/name"
                    android:visibility="gone"
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/photo"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:text="爱美的小兔子"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_toRightOf="@+id/photo"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="MXCOME"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开 启 装 修 之 旅"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12sp" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_top"
                android:layout_marginTop="-20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <include layout="@layout/layout_flow_item1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_top"
                android:layout_marginTop="-20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/layout_flow_item2" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_top"
                android:layout_marginTop="-20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <include layout="@layout/layout_flow_item3" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-50dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:background="@drawable/corner_shape_mehelp_right">

                <TextView
                    android:id="@+id/tv_before"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_above="@+id/iv_add"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_marginLeft="57dp"
                    android:background="@drawable/main_small_corner_bg"
                    android:gravity="center"
                    android:text="前"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_50dp"
                    android:background="@drawable/corner_shape_black_b"
                    android:padding="@dimen/dimen_12dp"
                    android:src="@mipmap/icon_add" />

                <TextView
                    android:id="@+id/tv_after"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_below="@+id/iv_add"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/corner_shape_red"
                    android:gravity="center"
                    android:text="后"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_middle"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:background="@drawable/corner_shape_green"
                    android:gravity="center"
                    android:text="中"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/blue_sha"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@mipmap/demend_bom_line" />
        <Button
            android:id="@+id/begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="立即申请装修"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_14sp" />

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/msg_grey_bg"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_10dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/project_progress_msg_gray"
        android:drawablePadding="@dimen/dimen_10dp"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimen_12dp"
        android:paddingTop="12dp"
        android:text="MXCOME为您打造梦幻之家，期期有奖送不停！"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/act_top_img" />

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/act_endorsement_img" />

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/act_disc_img" />

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/act_artisan_img" />

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/act_look_img" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_15dp"
                android:layout_alignParentBottom="true"
                android:background="#ffe2e5e5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_1dp"
                    android:paddingTop="@dimen/dimen_1dp"
                    android:text="MXCOME"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="MXCOME"
                    android:textColor="@color/colorGrey"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
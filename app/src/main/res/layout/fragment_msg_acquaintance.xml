<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/msg_grey_bg">

    <ListView
        android:id="@+id/list_acquaintance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_15dp"
        android:layout_alignParentBottom="true"
        android:background="#ffe2e5e5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_1dp"
            android:paddingTop="@dimen/dimen_1dp"
            android:text="MXCOME"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="MXCOME"
            android:textColor="@color/colorGrey"
            android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>

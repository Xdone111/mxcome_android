<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/me_about_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:text="@string/version_soft"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_b"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_push_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_push_switch"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/me_set_push_switch" />

                <CheckBox
                    android:id="@+id/cb_push_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:button="@null"
                    android:text="@string/toolbar_push_switch"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_12sp" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dimen_1px"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_gravity="bottom"
                android:background="@color/msg_light_grey" />

            <LinearLayout
                android:id="@+id/ll_update_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_update_clear"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/me_set_update_clean" />

                <CheckBox
                    android:id="@+id/cb_update_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:button="@null"
                    android:text="@string/update_clear"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_12sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="@dimen/dimen_1px"
            android:layout_gravity="center"
            android:background="@color/msg_light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_share_favorable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_share_favorable"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/me_set_share" />

                <CheckBox
                    android:id="@+id/cb_share_favorable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:button="@null"
                    android:text="@string/share_text"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_12sp" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dimen_1px"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_gravity="top"
                android:background="@color/msg_light_grey" />

            <LinearLayout
                android:id="@+id/ll_about_soft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_about_soft"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/me_set_about" />

                <CheckBox
                    android:id="@+id/cb_about_soft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:button="@null"
                    android:text="@string/toolbar_about_soft"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/msg_grey_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/rect_shape_blue_btn"
            android:text="@string/exit"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/font_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="@string/buttom_text1"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="@string/buttom_text2"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="@string/buttom_text3"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
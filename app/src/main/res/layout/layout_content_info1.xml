<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_info1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <com.zss.library.widget.CommonEditWidget
        android:id="@+id/nameWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/line" />

    <com.zss.library.widget.CommonEditWidget
        android:id="@+id/phoneWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/line" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_gravity="left"
            android:layout_marginLeft="80dp"
            android:background="@drawable/radio_bg"
            android:button="@null"
            android:gravity="center"
            android:text="@string/project_man"
            android:textColor="@color/radio_text_color"
            android:textSize="@dimen/font_14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:background="@drawable/radio_bg"
            android:button="@null"
            android:gravity="center"
            android:text="@string/project_woman"
            android:textColor="@color/radio_text_color"
            android:textSize="@dimen/font_14sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/base_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16sp"
        android:visibility="gone" />
</LinearLayout>
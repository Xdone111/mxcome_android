<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/demend_three_sel_one_ad" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/adv"
        android:layout_marginBottom="48dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-3dp"
                    android:background="@mipmap/demand_top_grey"
                    android:button="@null"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:text="单 项\n业 务"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-2dp"
                        android:background="@mipmap/demand_left_grey"
                        android:button="@null"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:text="模 块\n装 修"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-2dp"
                        android:background="@mipmap/demand_right_grey"
                        android:button="@null"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:text="整 体\n装 修"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/center_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button1"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/demand_center_logo" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_16sp" />
</RelativeLayout>

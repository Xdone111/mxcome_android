<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_content_3"
    android:visibility="gone"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:background="@drawable/corner_btn_normal_push"
                android:orientation="vertical">
               <ImageView
                   android:id="@+id/show_tel_bg"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@mipmap/tel_server_bg"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MXCOME官方免费提供电话热线咨询服务，及时解答用户疑问，服务时间为早8点至晚10点。"
                    android:padding="@dimen/dimen_16dp"
                    android:textColor="@color/colorGrey"
                    android:lineSpacingExtra="2dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_14sp"/>
                <View  android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/msg_grey_bg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tel_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="暂不需要"
                            android:textColor="@color/colorGrey"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:padding="@dimen/dimen_8dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            android:textSize="@dimen/font_18sp"/>
                        <View  android:layout_height="match_parent"
                        android:layout_width="@dimen/dimen_1dp"
                        android:background="@color/msg_grey_bg"/>
                        <TextView
                            android:id="@+id/tel_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:text="立即拨打"
                            android:layout_weight="1"
                            android:padding="@dimen/dimen_8dp"
                            android:textColor="@color/colorBlue"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:textSize="@dimen/font_18sp"/>
                </LinearLayout>

            </LinearLayout>
</FrameLayout>

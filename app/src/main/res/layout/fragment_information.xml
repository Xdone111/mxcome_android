<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/title_ry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp">
        <TextView
            android:id="@+id/left_second_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorGrey"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/first_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorBlue"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"/>
        <TextView
            android:id="@+id/past_tv"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorBlue"
            android:layout_alignParentRight="true"
            android:text="@string/past_txt"
            android:layout_centerVertical="true"
            android:background="@drawable/rect_corner_reset"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_6dp"
            android:paddingBottom="@dimen/dimen_6dp"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/title_ry"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/last_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:scaleType="centerInside"
        android:background="@mipmap/information_last"/>
    <ImageView
        android:id="@+id/next_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:scaleType="centerInside"
        android:background="@mipmap/information_next"/>
</RelativeLayout>
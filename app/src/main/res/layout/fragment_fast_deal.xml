<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/colorBlue"
    android:orientation="vertical">


    <com.fenazola.mxcome.widget.RadioGroupLayout
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_4dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rb_fast_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_radio_selector_new"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_8dp"
                android:text="官方"
                android:textColor="@color/white"
                android:textSize="@dimen/font_15sp" />

            <ImageView
                android:id="@+id/img_red_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignRight="@+id/rb_fast_1"
                android:background="@mipmap/msg_chat_voice_unread"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dimen_4dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_fast_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_radio_selector_new"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_8dp"

                android:text="服务"
                android:textColor="@color/white"
                android:textSize="@dimen/font_15sp" />

            <ImageView
                android:id="@+id/img_red_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignRight="@+id/rb_fast_2"
                android:background="@mipmap/msg_chat_voice_unread"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_marginRight="@dimen/dimen_4dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_fast_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_radio_selector_new"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_8dp"

                android:text="好友"
                android:textColor="@color/white"
                android:textSize="@dimen/font_15sp" />

            <ImageView
                android:id="@+id/img_red_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignRight="@+id/rb_fast_3"
                android:background="@mipmap/msg_chat_voice_unread"/>

        </RelativeLayout>

    </com.fenazola.mxcome.widget.RadioGroupLayout>

    <com.fenazola.mxcome.widget.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_40dp"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fast_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rect_btn_left"
            android:text="@string/fast_later_btn"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18sp" />

        <TextView
            android:id="@+id/fast_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rect_btn_right"
            android:text="@string/fast_deal_btn"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18sp" />

    </LinearLayout>

</LinearLayout>

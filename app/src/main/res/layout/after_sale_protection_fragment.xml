<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp">
    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_medium_corner_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_4dp">

        <ImageView
            android:id="@+id/message_iv_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:src="@mipmap/message" />

        <TextView
            android:id="@+id/message_name_tv_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:background="@color/colorBlue"
            android:padding="@dimen/dimen_4dp"
            android:text="官方"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12sp" />

        <com.fenazola.mxcome.widget.AlwaysMarqueeTextView
            android:id="@+id/message_tv_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:paddingLeft="@dimen/dimen_4dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/font_12sp"
            android:textColor="@color/colorBlue"
            android:text="温馨提示：施工中如遇任何问题，欢迎随时联系我们。" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_1"
        android:layout_below="@id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_12sp"
        android:background="@color/white"
        android:text="MXCOME全面展开净网行动、专业额法律保障、联动公检法、线下净网专干快速协调处理纠纷，全力保障客户权益。"
        />

    <LinearLayout
        android:id="@+id/ly_2"
        android:layout_below="@id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/corner_btn_normal_faq"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="保障团队"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dimen_2dp"
                android:text="SECURITY TEAM"
                android:textSize="@dimen/font_10sp"
                android:textColor="@color/colorGrey" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dimen_2dp"
                android:text="装修顾问"
                android:layout_weight="1"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/corner_after_sel"
                android:textColor="@color/colorBlue" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dimen_2dp"
                android:text="MX专员"
                android:layout_weight="1"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/corner_after_def"
                android:textColor="@color/colorGrey" />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dimen_2dp"
                android:text="净网专干"
                android:layout_weight="1"
                android:textSize="@dimen/font_14sp"
                android:background="@drawable/corner_after_def"
                android:textColor="@color/colorGrey" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dimen_16dp"
                android:src="@mipmap/project_progress_sy" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dimen_16dp"
                android:src="@mipmap/project_progress_zy" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dimen_16dp"
                android:src="@mipmap/project_progress_dy" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/contact_us_phone" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ly_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/corner_btn_normal_faq"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_1dp"
                android:text="售后保修"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="AFTER THE WARRANTY"
                android:paddingBottom="@dimen/dimen_2dp"
                android:textSize="@dimen/font_10sp"
                android:textColor="@color/colorGrey" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1px"
            android:background="@drawable/line" />
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorGrey"
            android:gravity="center" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorGrey"
            android:gravity="center"
            android:background="@drawable/after_et_def"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/msg_light_grey"
            android:hint="输入MX号或质保卡号"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorRed"
            android:gravity="center"
            android:text="申请服务"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_15dp"
        android:background="#ffe2e5e5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_1dp"
            android:paddingTop="@dimen/dimen_1dp"
            android:text="MXCOME"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="MXCOME"
            android:textColor="@color/colorGrey"
            android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>
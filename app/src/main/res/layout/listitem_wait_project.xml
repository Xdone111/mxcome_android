<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_10dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/house_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/edit_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:background="@drawable/rect_normal_selector_my_project"
            android:paddingBottom="@dimen/dimen_2dp"
            android:paddingLeft="@dimen/dimen_6dp"
            android:paddingRight="@dimen/dimen_6dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:text="编辑"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@mipmap/my_project_vline" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/new_project"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="立即新建"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:background="@drawable/line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_mine_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/my_project_under"
                android:drawablePadding="@dimen/dimen_8dp"
                android:gravity="center"
                android:padding="@dimen/dimen_6dp"
                android:text="名下"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/my_project_delete"
                android:drawablePadding="@dimen/dimen_8dp"
                android:gravity="center"
                android:padding="@dimen/dimen_6dp"
                android:text="删除"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_15sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

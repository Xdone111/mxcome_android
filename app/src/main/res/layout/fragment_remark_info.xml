<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="备注"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_25dp"
                android:background="@null"
                android:hint="人鱼公主"
                android:textColor="@color/colorBlue"
                android:textColorHint="@color/colorBlue"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="标签"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_25dp"
                android:background="@drawable/rect_shape_grey"
                android:gravity="center"
                android:text="加标签"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_12sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="电话"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_25dp"
                android:background="@null"
                android:hint="添加电话号码"
                android:textColor="@color/colorBlue"
                android:textColorHint="@color/colorGrey"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_10dp"

            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="描述"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_25dp"
                android:background="@null"
                android:hint="添加更多描述信息 ( 200字内 )"
                android:textColor="@color/colorBlue"
                android:textColorHint="@color/colorGrey"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="图片"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/see_image_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_25dp"
                android:gravity="center_vertical"
                android:hint="添加名片或相关图片"
                android:textColor="@color/colorBlue"
                android:textColorHint="@color/colorGrey"
                android:textSize="@dimen/font_13sp" />

            <ImageView
                android:id="@+id/small_image"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:background="@drawable/line"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/rect_shape_grey_btn"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_15sp" />

</LinearLayout>

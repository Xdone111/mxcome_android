<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="51dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.fenazola.mxcome.widget.clipView.CircleImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@mipmap/group_default_ico" />

        <TextView
            android:id="@+id/city_list_tv"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="成都"
            android:textColor="@color/demend_bom_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/list_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:src="@drawable/corner_shape_grey"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:id="@+id/show_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:background="@drawable/line"/>
</LinearLayout>
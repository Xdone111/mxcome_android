<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_52dp"
        android:background="@color/colorBlue"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_weight="1"
            android:background="@drawable/worker_seach_top_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:drawablePadding="@dimen/dimen_4dp"
                android:drawableRight="@mipmap/down_white_img"
                android:gravity="center"
                android:padding="@dimen/dimen_6dp"
                android:text="长沙"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />

            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:background="@drawable/line"
                android:gravity="center" />

            <EditText
                android:id="@+id/show_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/trans"
                android:hint="请输入您要搜索的内容或关键字"
                android:paddingLeft="@dimen/dimen_8dp"
                android:textColor="@color/white"
                android:textColorHint="#f3f3f3"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="@dimen/dimen_6dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/msg_grey_bg"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:text="搜索历史记录"
        android:textColor="@color/colorGrey" />

    <ListView
        android:id="@+id/show_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/canel_list_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:text="清空历史记录"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/font_14sp" />

</LinearLayout>

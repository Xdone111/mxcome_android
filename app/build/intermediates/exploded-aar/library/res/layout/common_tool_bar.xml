<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/action_bar_bg"
    android:paddingLeft="@dimen/dimen_6dp"
    android:paddingRight="@dimen/dimen_6dp" >

    <LinearLayout
        android:id="@+id/common_ll_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_52dp"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/common_img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:src="@mipmap/btn_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_ll_middle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_52dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/common_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_ll_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_52dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/common_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="56dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/common_img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
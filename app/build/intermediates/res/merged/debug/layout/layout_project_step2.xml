<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="@dimen/dimen_6dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:background="@drawable/v_line" />

        <TextView
            android:id="@+id/ball"
            android:layout_width="@dimen/dimen_14dp"
            android:layout_height="@dimen/dimen_14dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/corner_shape_blue_pj_worker" />

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@drawable/v_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/build_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="@string/demand_item1"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_16sp" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_16dp" />

                <TextView
                    android:id="@+id/moveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/font_16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/step1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/project_step"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/step2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/project_step"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/step_desc1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/step_desc2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1px"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/project_time"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/project_total_amt"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/project_work_time"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/project_total_step"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/work_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/total_step"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/worker_project_show"
            android:drawablePadding="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/project_build_image"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_16sp" />

        <RelativeLayout
            android:id="@+id/building_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/build_before"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_default" />

                <ImageView
                    android:id="@+id/building"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_default" />

                <ImageView
                    android:id="@+id/build_after"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/me_help_bg_color"
                    android:gravity="center"
                    android:text="@string/project_build_before"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:background="@color/me_help_bg_color"
                    android:gravity="center"
                    android:text="@string/project_building"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/me_help_bg_color"
                    android:gravity="center"
                    android:text="@string/project_build_after"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16sp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/rect_corner_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tel_left"
                android:layout_width="@dimen/dimen_52dp"
                android:layout_height="@dimen/dimen_52dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_16dp"
                android:src="@mipmap/project_progress_text" />

            <View
                android:layout_width="@dimen/dimen_1px"
                android:layout_height="match_parent"
                android:background="@drawable/v_line" />

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dimen_10dp"
                android:enabled="false"
                android:text="@string/project_contact_worker"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <View
                android:layout_width="@dimen/dimen_1px"
                android:layout_height="match_parent"
                android:background="@drawable/v_line" />

            <ImageView
                android:id="@+id/tel_right"
                android:layout_width="@dimen/dimen_52dp"
                android:layout_height="@dimen/dimen_52dp"
                android:padding="@dimen/dimen_16dp"
                android:src="@mipmap/project_progress_tel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/rect_corner_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/voice_left"
                android:layout_width="@dimen/dimen_52dp"
                android:layout_height="@dimen/dimen_52dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_16dp"
                android:src="@mipmap/project_progress_shield" />

            <View
                android:layout_width="@dimen/dimen_1px"
                android:layout_height="match_parent"
                android:background="@drawable/v_line" />

            <EditText
                android:id="@+id/et_voice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dimen_10dp"
                android:enabled="false"
                android:text="@string/project_contact_we"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_16sp" />

            <View
                android:layout_width="@dimen/dimen_1px"
                android:layout_height="match_parent"
                android:background="@drawable/v_line" />

            <ImageView
                android:id="@+id/voice_right"
                android:layout_width="@dimen/dimen_52dp"
                android:layout_height="@dimen/dimen_52dp"
                android:padding="@dimen/dimen_16dp"
                android:src="@mipmap/project_progress_voice" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/colorBlue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_corner_blue_line"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="长沙油漆总汇"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_30dp">

                <TextView
                    android:id="@+id/group_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/font_14sp" />

                <TextView
                    android:id="@+id/group_sum_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="/100"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_14sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_mxcome_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:gravity="center"
                android:text="群号：10001"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp" />

            <TextView
                android:id="@+id/group_level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LV1"
                android:paddingTop="@dimen/dimen_2dp"
                android:paddingBottom="@dimen/dimen_2dp"
                android:paddingLeft="@dimen/dimen_8dp"
                android:paddingRight="@dimen/dimen_8dp"
                android:background="@drawable/corner_btn_normal_group_yellow"
                android:textColor="@color/colorYellow"
                android:textSize="@dimen/font_14sp"
                android:layout_alignBottom="@+id/group_mxcome_tv"
                android:layout_centerHorizontal="true" />


            <TextView
                android:id="@+id/group_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:gravity="center"
                android:text="中国 湖南 长沙"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_14sp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/group_info"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70dp"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorGrey"
            android:paddingLeft="@dimen/dimen_30dp"
            android:paddingRight="@dimen/dimen_30dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:text="群简介：本群成立于2017年……"
            android:background="@color/main_medium_corner_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_30dp"
            android:paddingRight="@dimen/dimen_30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"
                android:src="@mipmap/ic_launcher"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"

                android:layout_marginLeft="@dimen/dimen_30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/group_speack_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:textSize="@dimen/font_12sp"
                    android:textColor="@color/colorGrey"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:lineSpacingExtra="3dp"
                    android:text="群口号：\n本群成立于2017年……" />
                <TextView
                    android:id="@+id/scend_admin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:textSize="@dimen/font_12sp"
                    android:textColor="@color/colorGrey"
                    android:text="副群主：帅帅的" />
                <TextView
                    android:id="@+id/admin_tv"
                    android:layout_marginBottom="3dp"
                    android:layout_above="@id/scend_admin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_12sp"
                    android:textColor="@color/colorGrey"
                    android:text="群    主：美美哒" />
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorGrey"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="扫一扫上面的二维码图案，加入群聊"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:background="@mipmap/qrcode_send_img"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/show_send_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:text="发送群名片"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/font_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:text="推荐给好友"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_12sp" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dimen_1px"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:background="#4d4bb7Fd"/>
            <LinearLayout
                android:id="@+id/show_in_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:text="申请入群"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/font_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:text="等待验证通过"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_15dp"
        android:layout_alignParentBottom="true"
        android:background="#3eacf3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_1px"
            android:paddingTop="@dimen/dimen_1px"
            android:text="MXCOME"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="MXCOME"
            android:textColor="#2289cc"
            android:textSize="10sp" />
    </RelativeLayout>

    <com.fenazola.mxcome.widget.clipView.CircleImageView
        android:id="@+id/photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:src="@mipmap/me_photo" />
</RelativeLayout>



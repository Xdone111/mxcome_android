        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/me_xbg"
                android:scaleType="matrix" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:src="@mipmap/me_photo_bg" />

            <com.fenazola.mxcome.widget.clipView.CircleImageView
                android:id="@+id/photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:src="@mipmap/me_photo" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_18sp" />

            <ImageView
                android:id="@+id/topic"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="75dp"
                android:layout_toLeftOf="@+id/photo"
                android:src="@mipmap/me_luck_draw_img" />

            <ImageView
                android:id="@+id/chat"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/photo"
                android:src="@mipmap/me_discount_img" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_6dp"
                android:text="等级"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_12sp" />

            <TextView
                android:id="@+id/identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/me_left"
                android:gravity="right"
                android:paddingRight="@dimen/dimen_2dp"
                android:text="立即认证"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:background="@mipmap/me_right"
                android:gravity="right"
                android:paddingRight="@dimen/dimen_2dp"
                android:text="信用积分"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_6dp"
                android:text="信用"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_12sp" />

        </LinearLayout>


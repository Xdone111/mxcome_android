<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.fenazola.mxcome.widget.clipView.CircleImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:src="@mipmap/design_house" />

    <ImageView
        android:id="@+id/shield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logo"
        android:layout_alignRight="@+id/logo" />

    <TextView
        android:id="@+id/authen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/rect_shape_yellow_bg"
        android:textColor="@color/colorYellow"
        android:textSize="@dimen/font_12sp" />

    <RelativeLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_toRightOf="@+id/logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="6"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/skill1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@+id/name"
            android:background="@drawable/rect_shape_green_bg"
            android:textColor="#5ccdc6"
            android:textSize="@dimen/font_12sp" />

        <TextView
            android:id="@+id/skill2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_toRightOf="@+id/skill1"
            android:background="@drawable/rect_shape_green_bg"
            android:textColor="#5ccdc6"
            android:textSize="@dimen/font_12sp" />

        <TextView
            android:id="@+id/skill3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_toRightOf="@+id/skill2"
            android:background="@drawable/rect_shape_green_bg"
            android:textColor="#5ccdc6"
            android:textSize="@dimen/font_12sp" />

        <TextView
            android:id="@+id/skill4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_toRightOf="@+id/skill3"
            android:background="@drawable/rect_shape_green_bg"
            android:textColor="#5ccdc6"
            android:textSize="@dimen/font_12sp" />


        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_13sp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_13sp" />

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ll_left"
            android:layout_toRightOf="@+id/ll_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_13sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/smallRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5" />

            </LinearLayout>

            <TextView
                android:id="@+id/missto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/name"
            android:layout_marginRight="@dimen/dimen_14dp"
            android:background="@drawable/rect_shape_green_bg"
            android:textColor="#5ccdc6"
            android:textSize="@dimen/font_12sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logo"
        android:layout_below="@+id/ll_center"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="大家说"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label1"
                style="@style/TextButtonBg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:background="@drawable/rect_corner_reset"
                android:gravity="center" />

            <TextView
                android:id="@+id/label2"
                style="@style/TextButtonBg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/rect_corner_reset"
                android:gravity="center" />

            <TextView
                android:id="@+id/label3"
                style="@style/TextButtonBg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/rect_corner_reset"
                android:gravity="center" />

            <TextView
                android:id="@+id/label4"
                style="@style/TextButtonBg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:background="@drawable/rect_corner_reset"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
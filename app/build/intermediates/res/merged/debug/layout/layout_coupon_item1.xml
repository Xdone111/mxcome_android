<?xml version="1.0" encoding="utf-8"?>
<com.zss.library.swipelayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    <RelativeLayout
        android:id="@+id/delete_layout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/msg_delete" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/show_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:background="@mipmap/youhui_red"
            android:orientation="horizontal"
            android:weightSum="59">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/dimen_30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/show_get_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:src="@mipmap/youhui_shiyong" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_8dp">

                    <TextView
                        android:id="@+id/show_monery_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"

                        android:text="国庆优惠券"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14sp" />

                    <TextView
                        android:id="@+id/show_monery_tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/dimen_2dp"
                        android:text="有效期2017-6-19"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/show_monery_tv4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|right"
                        android:text="仅限工人使用"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="44"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/show_monery_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/font_22sp" />

                <TextView
                    android:id="@+id/show_monery_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/font_14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.zss.library.swipelayout.SwipeRevealLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/msg_grey_bg"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <GridView
                android:paddingTop="@dimen/dimen_10dp"
                android:id="@+id/show_lv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingLeft="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_20dp"
                android:background="@color/white"
                android:numColumns="4"
                android:scrollbars="none">

            </GridView>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/dimen_60dp">
                <LinearLayout
                    android:id="@+id/to_name_ly"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="群名称"
                        android:textSize="@dimen/font_14sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/show_ad_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MXCOME装修"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:textSize="@dimen/font_12sp"
                        android:textColor="@color/colorGrey"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/group_lin_in_item"/>
                <LinearLayout
                    android:id="@+id/group_gonggao"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="群公告"
                        android:textSize="@dimen/font_14sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/show_ad_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兄弟齐心，其利断金"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:textSize="@dimen/font_12sp"
                        android:textColor="@color/colorGrey"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/group_lin_in_item"/>
                <LinearLayout
                    android:id="@+id/to_qc_ly"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二维码"
                        android:textSize="@dimen/font_14sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/group_setting_qc"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:textSize="@dimen/font_12sp"
                        android:textColor="@color/colorGrey"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.zss.library.widget.CommonSwitchWidget
                    android:id="@+id/sw_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="置顶群聊天"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_weight="1">

                </com.zss.library.widget.CommonSwitchWidget>
                <com.zss.library.widget.CommonSwitchWidget
                    android:id="@+id/sw_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="消息免打扰"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_weight="1">

                </com.zss.library.widget.CommonSwitchWidget>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.zss.library.widget.CommonSwitchWidget
                    android:id="@+id/sw_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    app:left_text="存到通讯录"
                    android:layout_weight="1">

                </com.zss.library.widget.CommonSwitchWidget>
                <com.zss.library.widget.CommonSwitchWidget
                    android:id="@+id/sw_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="成员显昵称"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_weight="1">

                </com.zss.library.widget.CommonSwitchWidget>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    android:text="本群昵称"/>
                <TextView
                    android:id="@+id/nike_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textColor="@color/colorGrey"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:textSize="@dimen/font_14sp"
                    android:text="李云成"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_4dp"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    android:text="聊天记录"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:src="@mipmap/group_lin_in_item"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    />
                <ImageView
                    android:id="@+id/delete_info_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:src="@mipmap/my_project_delete"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dimen_4dp"

                    android:textSize="@dimen/font_14sp"
                    android:text="聊天文件"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:src="@mipmap/group_lin_in_item"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    />
                <ImageView
                    android:id="@+id/delete_file_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:src="@mipmap/my_project_delete"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tousuo_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    android:text="投诉此群"/>

            </LinearLayout>
            <TextView
                android:id="@+id/out_group_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center"
                android:text="退出此群"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorBlue"
                android:background="@drawable/corner_btn_normal_group"/>

        </LinearLayout>



    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_52dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/show_group_iv"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/group_rc_img" />

            <TextView
                android:id="@+id/show_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="MXCOME装修"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textSize="@dimen/font_16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/qc_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:text="该二维码7天内有效，8月7日前重新进入将更新"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/show_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/title_color1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/share_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="#991D1D26"
                android:gravity="center"
                android:text="分享二维码"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="#1affffff" />

            <TextView
                android:id="@+id/save_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="#991D1D26"
                android:gravity="center"
                android:text="保存到手机"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
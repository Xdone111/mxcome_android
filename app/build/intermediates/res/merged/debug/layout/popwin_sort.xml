<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_b"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rb_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_blue_white_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="综合评分"
                android:textColor="@color/worker_color"
                android:textSize="@dimen/font_15sp" />


            <RadioButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_blue_white_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="热度"
                android:textColor="@color/worker_color"
                android:textSize="@dimen/font_15sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_blue_white_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="接单量"

                android:textColor="@color/worker_color"
                android:textSize="@dimen/font_15sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_blue_white_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="好评数"
                android:textColor="@color/worker_color"
                android:textSize="@dimen/font_15sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_blue_white_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="离我最近"
                android:textColor="@color/worker_color"
                android:textSize="@dimen/font_15sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_blue_white_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="价格从高到低"
                android:textColor="@color/worker_color"
                android:textSize="@dimen/font_15sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_blue_white_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dimen_12dp"
                android:text="价格从低到高"
                android:textColor="@color/worker_color"
                android:textSize="@dimen/font_15sp" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/trans_b"
        android:orientation="vertical" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sendMsgLayout"
        android:divider="@null"
        android:listSelector="@color/bg"
        android:background="@color/bg"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:dividerHeight="@dimen/dimen_10dp">

    </ListView>

    <RelativeLayout
        android:id="@+id/center_layout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/corner_shape_yellow"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/demand_voice_message" />

    </RelativeLayout>

    <com.fenazola.mxcome.widget.SendMsgLayout
        android:id="@+id/sendMsgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

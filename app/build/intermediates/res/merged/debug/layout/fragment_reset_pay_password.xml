<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/msg_grey_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="请重新绑定银行卡以找回密码"
            android:textSize="@dimen/font_14sp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:textColor="@color/colorGrey"/>
        <ListView
            android:id="@+id/show_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/line"
            android:scrollbars="none">

        </ListView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="绑定新卡找回"
            android:textSize="@dimen/font_14sp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:textColor="@color/colorGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_new_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="添加银行卡"
                android:paddingLeft="@dimen/dimen_10dp"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_14sp" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="为安全起见，完成后已绑卡会自动解绑"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_13sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/show_faq_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:textSize="@dimen/font_14sp"
        android:textColor="@color/colorBlue"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:text="常见问题"/>

</RelativeLayout>
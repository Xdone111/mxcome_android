<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/v_line"
            android:layout_marginLeft="@dimen/dimen_20dp"/>

        <TextView
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/corner_shape_line"/>

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/v_line"
            android:layout_marginLeft="@dimen/dimen_20dp"/>

        <TextView
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/corner_shape_line"/>

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/v_line"
            android:layout_marginLeft="@dimen/dimen_20dp"/>

        <TextView
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/corner_shape_line"/>

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/v_line"
            android:layout_marginLeft="@dimen/dimen_20dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_16dp"
            android:src="@mipmap/project_progress_sy"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_16dp"
            android:src="@mipmap/project_progress_zy"/>


        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_16dp"
            android:src="@mipmap/project_progress_dy"/>

        <TextView
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_pause"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_18sp"/>

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/big_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_35dp"
            android:src="@mipmap/dongjie_bg" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_35dp"
            android:gravity="center_horizontal"
            android:text="发现账号被盗后，你可以冻结MXCOME账号"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/dimen_4dp"
            android:text="防止坏人窃取您的个人隐私"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_14sp" />

        <TextView
            android:id="@+id/to_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:background="@drawable/corner_btn_primary_sel"
            android:gravity="center"
            android:text="开始冻结"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp" />
    </LinearLayout>
</LinearLayout>

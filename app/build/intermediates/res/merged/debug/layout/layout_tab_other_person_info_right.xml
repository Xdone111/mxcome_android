<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:background="@color/colorBlue"
    android:paddingRight="@dimen/dimen_6dp">

    <ImageView
        android:id="@+id/right_iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/w_share" />

    <ImageView
        android:id="@+id/right_iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:layout_marginRight="@dimen/dimen_6dp"
        android:src="@mipmap/me_pay_detail" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/show_ly_sheji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/corner_btn_normal_push"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_20dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/show_back"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_grey_back"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_48dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/step_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/push_tv_white_st"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="@dimen/dimen_32dp"
                        android:layout_height="@dimen/dimen_1px"
                        android:background="@drawable/line" />

                    <TextView
                        android:id="@+id/step_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/push_tv_white"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="@dimen/dimen_32dp"
                        android:layout_height="@dimen/dimen_1px"
                        android:background="@drawable/line" />

                    <TextView
                        android:id="@+id/step_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/push_tv_white"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/title_role_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:gravity="center"
            android:text="快速体验MXCOME世界角色"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14sp" />

        <TextView
            android:id="@+id/title_role_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_4dp"
            android:text="点击后即将观看30秒短视频，建议在wifi环境下使用"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:background="@drawable/corner_btn_role_b"
            android:gravity="center"
            android:padding="@dimen/dimen_16dp"
            android:text="我是用户"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/corner_btn_role_y"
            android:gravity="center"
            android:padding="@dimen/dimen_16dp"
            android:text="我是设计"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv3"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/corner_btn_role_b1"
            android:gravity="center"
            android:padding="@dimen/dimen_16dp"
            android:text="我是工人"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/corner_btn_role_r"
            android:gravity="center"
            android:padding="@dimen/dimen_16dp"
            android:text="我是监理"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fy_colose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:src="@mipmap/role_colose" />
    </LinearLayout>
</RelativeLayout>

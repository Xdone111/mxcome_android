<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBlue">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/me_photo_bg" />

                <com.fenazola.mxcome.widget.clipView.CircleImageView
                    android:id="@+id/photo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/me_photo" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/grade_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_1dp"
                    android:text="LV7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_10sp" />

                <!--<RatingBar-->
                <!--style="@style/MyRatingBarG2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/image"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginLeft="@dimen/dimen_25dp"-->
                <!--android:layout_marginTop="@dimen/dimen_10dp"-->
                <!--android:numStars="5"-->
                <!--android:stepSize="1.0" />-->

                <com.example.xlhratingbar_lib.XLHRatingBar
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    lxhRatingBar:canEdit="false"
                    lxhRatingBar:countSelected="3"
                    lxhRatingBar:differentSize="false"
                    lxhRatingBar:dividerWidth="2dp"
                    lxhRatingBar:starCount="5"
                    lxhRatingBar:stateResId="@drawable/jewel_selector"
                    lxhRatingBar:widthAndHeight="12dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@id/rl"
                android:background="@color/colorBlue"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_18sp" />

                    <TextView
                        android:id="@+id/rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/nike"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_6dp"
                        android:text="lv7"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/edit_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:paddingTop="@dimen/dimen_2dp"
                        android:src="@mipmap/my_info_edit" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:src="@mipmap/person_info_woman" />
                </LinearLayout>

                <TextView
                    android:id="@+id/my_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="信用：630分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名：向**"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:background="@drawable/rect_shape_blue_white"
                        android:paddingLeft="@dimen/dimen_2dp"
                        android:paddingRight="@dimen/dimen_2dp"
                        android:text="已实名"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_me_info_text_bg"
            android:gravity="center"
            android:padding="2dp"
            android:text="访 客"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/visitor_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_me_info_text_bg_1"
            android:gravity="center"
            android:padding="2dp"
            android:text="80"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_edite1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="昵称"
                android:textColor="@color/black_b"
                android:textSize="@dimen/font_15sp" />

            <TextView
                android:id="@+id/nikeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edite2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="性别"
                android:textColor="@color/black_b"
                android:textSize="@dimen/font_15sp" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edite3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="个人签名"
                android:textColor="@color/black"
                android:textSize="@dimen/font_15sp" />

            <TextView
                android:id="@+id/userSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="我是个性签名"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_15sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_edite4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="国家地区"
                android:textColor="@color/black"
                android:textSize="@dimen/font_15sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:lines="1"
                android:text="中国 湖南 长沙"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_4dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:text="圈子相册"
                android:textColor="@color/black"
                android:textSize="@dimen/font_15sp" />

            <LinearLayout
                android:id="@+id/images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ransfer_icon1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ransfer_icon2" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ransfer_icon3" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:layout_width="@dimen/dimen_4dp"
                android:layout_height="match_parent"
                android:background="@color/colorYellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:text="社群话题"
                android:textColor="@color/black"
                android:textSize="@dimen/font_15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ransfer_icon1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ransfer_icon2" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ransfer_icon3" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/msg_grey_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/msg_grey_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/show_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/believe_ad" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_medium_corner_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_4dp">

            <ImageView
                android:id="@+id/message_iv_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:src="@mipmap/message" />

            <TextView
                android:id="@+id/message_name_tv_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:background="@color/colorBlue"
                android:padding="@dimen/dimen_4dp"
                android:text="官方"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12sp" />

            <com.fenazola.mxcome.widget.AlwaysMarqueeTextView
                android:id="@+id/message_tv_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/colorBlue"
                android:text="温馨提示：施工中如遇任何问题，欢迎随时联系我们。" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1d1d26"
            android:paddingTop="@dimen/dimen_4dp"
            android:paddingBottom="@dimen/dimen_4dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.fenazola.mxcome.widget.AutoTextView
                android:id="@+id/show_atv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp" />

            <com.fenazola.mxcome.widget.AutoTextView
                android:id="@+id/show_atv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginTop="-6dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/believe_speak_bg"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/believe_big" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/believe_millde" />

                    <TextView
                        android:id="@+id/tv_to_1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="@mipmap/believe_small"
                        android:text="列表"
                        android:textColor="@color/topic_text_color4"
                        android:textSize="@dimen/font_16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_alignParentBottom="true"

                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/believe_big" />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/believe_millde" />

                    <TextView
                        android:id="@+id/tv_to_2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="@mipmap/believe_small"
                        android:text="新建"
                        android:textColor="@color/topic_text_color4"
                        android:textSize="@dimen/font_16sp" />
                </RelativeLayout>

                <com.fenazola.mxcome.widget.clipView.CircleImageView
                    android:id="@+id/photo"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="#1d1d26" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/believe_play"
                        android:layout_marginBottom="@dimen/dimen_20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_toLeftOf="@id/photo"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@mipmap/believe_left"
                        android:layout_marginBottom="@dimen/dimen_20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_toRightOf="@id/photo"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"

                        android:scaleType="fitXY"
                        android:src="@mipmap/believe_right"
                        android:layout_marginBottom="@dimen/dimen_20dp"/>
                </LinearLayout>


            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:src="@mipmap/believe_logo"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

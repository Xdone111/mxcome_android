<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_info2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_10dp"
    android:paddingLeft="@dimen/dimen_22dp"
    android:paddingRight="@dimen/dimen_22dp"
    android:paddingTop="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/v_line"
        android:showDividers="beginning|middle|end">

        <TextView
            android:id="@+id/country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableRight="@mipmap/me_triangle"
            android:gravity="center"
            android:padding="@dimen/dimen_12dp"
            android:paddingRight="14dp"
            android:text="@string/project_country"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:drawableRight="@mipmap/me_triangle"
            android:gravity="center"
            android:padding="@dimen/dimen_14dp"
            android:paddingRight="12dp"
            android:text="@string/project_region"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/street_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_2dp"
        android:paddingTop="@dimen/dimen_2dp">

        <AutoCompleteTextView
            android:id="@+id/street_auto_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="text"
            android:paddingBottom="@dimen/dimen_6dp"
            android:paddingTop="@dimen/dimen_6dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/font_16sp" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line" />

</LinearLayout>
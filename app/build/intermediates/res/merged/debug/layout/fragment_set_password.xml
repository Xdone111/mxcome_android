<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/login_register" />

            <com.zss.library.widget.CommonEditWidget
                android:id="@+id/eWidget1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:layout_marginRight="@dimen/dimen_35dp"
                android:layout_marginTop="@dimen/dimen_10dp" />

            <com.zss.library.widget.CommonTextWidget
                android:id="@+id/eWidget_toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:layout_marginRight="@dimen/dimen_35dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:visibility="gone" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="@dimen/dimen_35dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/my_line" />

            <com.zss.library.widget.CommonEditWidget
                android:id="@+id/eWidget2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:layout_marginRight="@dimen/dimen_35dp"
                android:layout_marginTop="@dimen/dimen_10dp" />

            <com.zss.library.widget.CommonTextWidget
                android:id="@+id/eWidget_toast1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:layout_marginRight="@dimen/dimen_35dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="@dimen/dimen_35dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/my_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zss.library.widget.CommonTextWidget
                    android:id="@+id/eWidget3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_35dp"
                    android:layout_marginRight="@dimen/dimen_35dp"
                    android:layout_marginTop="@dimen/dimen_10dp" />

                <View
                    android:id="@+id/line_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1px"
                    android:layout_below="@id/eWidget3"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:background="@drawable/line" />

                <com.zss.library.widget.CommonTextWidget
                    android:id="@+id/eWidget4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line_3"
                    android:layout_marginLeft="@dimen/dimen_35dp"
                    android:layout_marginRight="@dimen/dimen_35dp"
                    android:layout_marginTop="@dimen/dimen_10dp" />

                <TextView
                    android:id="@+id/toast_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/eWidget3"
                    android:layout_marginLeft="75dp"
                    android:text="请输入密码"
                    android:textColor="@color/colorDisabled"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/toast_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/eWidget4"
                    android:layout_marginLeft="75dp"
                    android:text="请再次输入密码"
                    android:textColor="@color/colorDisabled"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="@dimen/dimen_35dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/my_line" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@null"
            android:orientation="vertical"
            android:text="@string/me_confirm"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/show_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>

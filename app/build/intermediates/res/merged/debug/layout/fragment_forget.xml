<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <ImageView
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/login_register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirm"
        android:layout_below="@+id/top_layout"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:orientation="vertical">

        <com.zss.library.widget.CommonEditWidget
            android:id="@+id/eWidget1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_marginRight="@dimen/dimen_35dp"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1px"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="@dimen/dimen_35dp"
            android:background="@drawable/line"
            android:visibility="gone" />

        <com.zss.library.widget.CommonEditWidget
            android:id="@+id/eWidget2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_marginRight="@dimen/dimen_35dp"
            android:layout_marginTop="@dimen/dimen_10dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1px"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="@dimen/dimen_35dp"
            android:background="@drawable/line"
            android:visibility="gone" />

        <com.zss.library.widget.CommonEditWidget
            android:id="@+id/eWidget3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_marginRight="@dimen/dimen_35dp"
            android:layout_marginTop="@dimen/dimen_10dp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1px"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="@dimen/dimen_35dp"
            android:background="@drawable/line"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@null"
        android:orientation="vertical"
        android:text="@string/forget_pwd_and_login"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/font_16sp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/provision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/me_provision"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_11sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:background="@drawable/line" />
        </LinearLayout>

        <ImageView
            android:id="@+id/login_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:src="@mipmap/login_pull" />

    </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
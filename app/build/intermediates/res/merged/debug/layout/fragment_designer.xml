<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/bg"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/designer_classify1"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_14sp" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/designer_classify2"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_14sp" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="风格"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_14sp" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/designer_classify4"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_14sp" />

        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/designer_classify5"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_14sp" />

    </RadioGroup>

    <com.fenazola.mxcome.widget.LocationItemLayout
        android:id="@+id/locationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup" />

    <com.zss.library.ptr.PtrClassicFrameLayout
        android:id="@+id/mPtrFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locationLayout"
        android:layout_marginTop="@dimen/dimen_6dp">

        <com.fenazola.mxcome.widget.ScrollPicker
            android:id="@+id/mScrollPicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.zss.library.ptr.PtrClassicFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioGroup"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/design_triangle"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/design_triangle"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/design_triangle"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/design_triangle"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/image5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/design_triangle"
            android:visibility="invisible" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/classify_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radioGroup">
    </FrameLayout>


</RelativeLayout>
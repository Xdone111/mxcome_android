<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@mipmap/diary_detail_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/diary_photo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:src="@mipmap/diary_photo" />

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:src="@mipmap/diary_collect" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_collect"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:src="@mipmap/diary_share" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/trans_a">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:drawableLeft="@mipmap/diary_location"
                android:drawablePadding="5dp"
                android:text="南方时代宜家风格"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12sp" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="28dp"
                android:text="20万/140m²/三居/北欧"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:drawableLeft="@mipmap/diary_look"
            android:drawablePadding="5dp"
            android:padding="@dimen/dimen_4dp"
            android:text="24500"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12sp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:drawableLeft="@mipmap/diary_comment"
            android:drawablePadding="5dp"
            android:padding="@dimen/dimen_4dp"
            android:text="650"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12sp" />
    </LinearLayout>

</RelativeLayout>

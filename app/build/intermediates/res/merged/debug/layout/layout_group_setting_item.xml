<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_8dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/list_item_iv"
        android:layout_width="@dimen/dimen_65dp"
        android:layout_height="@dimen/dimen_65dp"
        android:scaleType="fitXY"
        android:src="@mipmap/group_setting_default_img"
        android:background="@drawable/rect_shape_grey_user"/>
    <TextView
        android:id="@+id/list_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorGrey"

        android:layout_marginTop="5dp"
        android:textSize="@dimen/font_14sp"
        android:maxLength="6"
        android:ellipsize="end"
        android:text="22222" />
</LinearLayout>

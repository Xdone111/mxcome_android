<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/project_choice_adv"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/head_btn1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/project_base_info1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@drawable/line" />

            <include layout="@layout/layout_content_info1" />

            <TextView
                android:id="@+id/head_btn2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/project_loca_info2"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@drawable/line" />

            <include layout="@layout/layout_content_info2" />

            <TextView
                android:id="@+id/head_btn3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/project_loca_info3"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@drawable/line" />

            <include layout="@layout/layout_content_info3" />

            <TextView
                android:id="@+id/head_btn4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/project_loca_info4"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1px"
                android:background="@drawable/line" />

            <include layout="@layout/layout_content_info4" />
            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reset"
                    style="@style/RectBtnNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="重置" />

                <Button
                    android:id="@+id/next"
                    style="@style/RectBtnPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="完成" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_b"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:text="类型"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_14sp" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="官方"
                        android:textColor="@color/worker_color" />

                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="个人"
                        android:textColor="@color/worker_color" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:button="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:button="@null" />
                </RadioGroup>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:text="距离"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_14sp" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="2KM"
                        android:textColor="@color/worker_color" />

                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="4KM"
                        android:textColor="@color/worker_color" />

                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="6KM"
                        android:textColor="@color/worker_color" />

                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="8KM"
                        android:textColor="@color/worker_color" />

                </RadioGroup>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:text="区域"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_14sp" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="国"
                        android:textColor="@color/worker_color" />

                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="省"
                        android:textColor="@color/worker_color" />

                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="市"
                        android:textColor="@color/worker_color" />

                    <RadioButton
                        style="@style/TextButtonBg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_grey_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="本地"
                        android:textColor="@color/worker_color" />

                </RadioGroup>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:text="服务"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/font_14sp" />


                        <CheckBox
                            style="@style/TextButtonBg2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_weight="1"

                            android:background="@drawable/rect_grey_blue_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="装修盾"
                            android:textColor="@color/worker_color" />

                        <CheckBox
                            style="@style/TextButtonBg2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_20dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_grey_blue_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="承诺付"
                            android:textColor="@color/worker_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|left"
                            android:text="此项可多选"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/font_13sp" />



            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_16dp">

            <Button
                android:id="@+id/reset"
                android:background="@color/colorReset"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reset" />

            <Button
                android:id="@+id/next"
                style="@style/RectBtnPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="完成" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/trans_b"
        android:orientation="vertical" />

</LinearLayout>
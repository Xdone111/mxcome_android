<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@mipmap/project_downpay_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/floor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_12dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect_corner_project_pay"
                android:divider="@drawable/line_white"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/dimen_8dp"
                        android:drawableRight="@mipmap/project_downpay_problem"
                        android:gravity="center"
                        android:padding="@dimen/dimen_6dp"
                        android:text="@string/project_downpay"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/pay_amt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_6dp"
                    android:paddingLeft="@dimen/dimen_32dp"
                    android:paddingRight="@dimen/dimen_32dp"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/timeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:text="@string/project_timeout"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/project_discount_amt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的预算"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/discount_amt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14sp" />

                <TextView
                    android:id="@+id/total_amt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_40dp"
            android:layout_marginRight="@dimen/dimen_40dp"
            android:background="@drawable/corner_btn_normal_def_blue_pay"
            android:gravity="center"
            android:text="@string/project_comfirm_pay_downpay"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_17sp" />

        <TextView
            android:id="@+id/order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_6dp"
            android:text="@string/project_order_no"
            android:textColor="#8e8d92"
            android:textSize="@dimen/font_12sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="#ffe2e5e5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_1dp"
            android:paddingTop="@dimen/dimen_1dp"
            android:text="MXCOME"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="MXCOME"
            android:textColor="@color/colorGrey"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black_b"
        android:divider="@drawable/line_b"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/listRow1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center"
            android:text="添标签备注"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/listRow2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center"
            android:text="加特别关注"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/listRow3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center"
            android:text="发送此名片"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/listRow4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center"
            android:text="设圈子权限"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/listRow5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center"
            android:text="删除这个人"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/listRow6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center"
            android:text="投诉这个人"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/listRow7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center"
            android:text="加入黑名单"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/listRow8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="center"
            android:text="添加到桌面"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>

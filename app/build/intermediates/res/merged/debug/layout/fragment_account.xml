<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_52dp"
    android:background="@color/msg_grey_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/me_pay_circle" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_dottedline"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:text="账户余额 ￥"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />

            <ImageView
                android:id="@+id/iv_dottedline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/me_pay_dottedline" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_dottedline"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="50000"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18sp" />


            <TextView
                android:id="@+id/tv_advance"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_alignBottom="@+id/iv_circle"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_toLeftOf="@+id/iv_circle"
                android:background="@drawable/corner_shape_white_blue_account"
                android:gravity="center"
                android:text="提 现"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_alignBottom="@+id/iv_circle"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_toRightOf="@+id/iv_circle"
                android:background="@drawable/corner_shape_white_blue_account"
                android:gravity="center"
                android:text="充 值"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/roll_to_mepay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/to_mepay"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="转入到ME宝"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:src="@mipmap/msg_check_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/corner_top_me"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="支持方式"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">


        <ImageView
            android:id="@+id/credit_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/account_credit_card" />

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="@dimen/dimen_30dp"
            android:background="@drawable/line" />

        <ImageView
            android:id="@+id/unionpay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/account_unionpay" />

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="@dimen/dimen_30dp"
            android:background="@drawable/line" />

        <ImageView
            android:id="@+id/wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/account_wechat" />

        <View
            android:layout_width="@dimen/dimen_1px"
            android:layout_height="@dimen/dimen_30dp"
            android:background="@drawable/line" />

        <ImageView
            android:id="@+id/alipay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/account_alipay" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/rect_corner_white_account"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@mipmap/ccb" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建设银行卡"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用卡|尾号3363"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:src="@mipmap/account_del_blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/rect_corner_white_account"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@mipmap/boc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工商银行卡"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用卡|尾号3363"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:src="@mipmap/account_del_red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/rect_corner_white_account"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_corner_white_account_dooted"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_shape_blue_pj_worker"
                android:padding="@dimen/dimen_4dp"
                android:src="@mipmap/icon_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="添加常用支付方式"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

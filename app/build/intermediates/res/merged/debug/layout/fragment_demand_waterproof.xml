<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/show_ly_waterproof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_gravity="center"
        android:background="@drawable/corner_btn_normal_push"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >
            <TextView
                android:id="@+id/tab_waterproof_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="专业防水"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/font_18sp" />
            <TextView
                android:id="@+id/tab_waterproof_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorBlue"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="PROFESSIONAL WATERPROOF"
                android:textSize="@dimen/font_12sp"/>

        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/msg_light_grey"
            android:gravity="center" />
        <TextView
            android:id="@+id/pop_number_waterproof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_8dp"
            android:textColor="@color/circle_toolbar_color"
            android:layout_weight="1"
            android:gravity="center" />
        <RadioGroup
            android:id="@+id/radioGroupID_waterproof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/waterproof_rd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/circle_toolbar_color"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:checked="true"
                android:button="@drawable/radiobutton"
                android:text=" 顶级"/>
            <RadioButton
                android:id="@+id/waterproof_rd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton"
                android:text=" 高级"
                android:textColor="@color/circle_toolbar_color"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"

                />
            <RadioButton
                android:id="@+id/waterproof_rd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/circle_toolbar_color"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:button="@drawable/radiobutton"
                android:text=" 普通"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_large_corner_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_4dp">
            <ImageView
                android:id="@+id/message_iv_waterproof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/message"
                android:layout_marginLeft="@dimen/dimen_4dp"/>
            <TextView
                android:id="@+id/message_name_tv_waterproof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_4dp"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:background="@color/colorBlue"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12sp"
                android:text="官方"/>
            <com.fenazola.mxcome.widget.AlwaysMarqueeTextView
                android:id="@+id/message_tv_waterproof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="官方官方官方官方官方官方官方官方官方官方官方官方官方官方官方官方官方官方官方官方官方官方"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/waterproof_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/circle_toolbar_color"
                android:textSize="@dimen/font_18sp"
                android:maxLines="1"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:text="重置"/>
            <TextView
                android:id="@+id/waterproof_huodong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/font_18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动"/>
            <TextView
                android:id="@+id/waterproof_sumbit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/circle_toolbar_color"
                android:textSize="@dimen/font_18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下单"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_alignTop="@id/show_ly_waterproof"
        android:layout_alignRight="@id/show_ly_waterproof"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:src="@mipmap/demond_act"/>
</RelativeLayout>
